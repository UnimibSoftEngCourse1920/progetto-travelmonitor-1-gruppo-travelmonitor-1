<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/MontserratRegularStyle</item>
        <item name="buttonStyle">@style/MontserratButtonStyle</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <!--selected Item color-->
        <item name="colorControlActivated">#2196F3</item>
        <!-- arrow bordercolor(<>)-->
        <item name="android:selectableItemBackgroundBorderless">@color/colorPrimary</item>
        <!-- Highlight item color-->
        <item name="colorControlHighlight">#d50000</item>
        <!--Calender Background color -->
        <item name="android:windowBackground">@color/colorPrimary</item>
        <!-- Ok Cancel Color-->
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarPositiveButtonStyle</item>
        <!-- Week TextColor-->
        <item name="android:textColorSecondary">#E91E63</item>
        <!-- Calender Number color arrow color (< >) -->
        <item name="android:textColorPrimary">#fff</item>
        <!--day , month-->
        <item name="android:textColorPrimaryInverse">#fff</item>
        <!-- year-->
        <item name="android:textColorSecondaryInverse">#fff</item>
    </style>

    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#fff</item>
    </style>
    <style name="DatePickerTheme.ButtonBarPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="MyTimePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <!--selected Item color-->
        <item name="colorControlActivated">#2196F3</item>
        <!-- arrow bordercolor(<>)-->
        <item name="android:selectableItemBackgroundBorderless">@color/colorPrimary</item>
        <!-- Highlight item color-->
        <item name="colorControlHighlight">#d50000</item>
        <!--Calender Background color -->
        <item name="android:windowBackground">@color/colorPrimary</item>
        <!-- Ok Cancel Color-->
        <item name="android:buttonBarNegativeButtonStyle">@style/TimePickerTheme.ButtonBarNegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/TimePickerTheme.ButtonBarPositiveButtonStyle</item>
        <!-- Week TextColor-->
        <item name="android:textColorSecondary">#E91E63</item>
        <!-- Calender Number color arrow color (< >) -->
        <item name="android:textColorPrimary">#fff</item>
        <!--day , month-->
        <item name="android:textColorPrimaryInverse">#fff</item>
        <!-- year-->
        <item name="android:textColorSecondaryInverse">#fff</item>
    </style>

    <style name="bannereliminapreferito" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/colorPrimary</item>

        <item name="android:textColorPrimary">#fff</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>

        <item name="android:textColorSecondary">@color/colorAccent</item>

        <item name="android:buttonBarNegativeButtonStyle">@style/TimePickerTheme.ButtonBarNegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/TimePickerTheme.ButtonBarPositiveButtonStyle</item>

    </style>

    <style name="bannerscegligiornipreferiti" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/colorPrimary</item>

        <item name="android:textColorPrimary">#fff</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>

        <item name="android:textColorAlertDialogListItem">#fff</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>

        <item name="android:buttonBarNegativeButtonStyle">@style/TimePickerTheme.ButtonBarNegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/TimePickerTheme.ButtonBarPositiveButtonStyle</item>

    </style>

    <style name="TimePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#fff</item>
    </style>
    <style name="TimePickerTheme.ButtonBarPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="MontserratRegularStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="MontserratBoldStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="MontserratButtonStyle" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

</resources>
