<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:elevation="10dp"
    android:orientation="vertical"
    android:translationZ="10dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#ffffff">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/orarioViaggio"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:hint="ORARIO"
                android:textAlignment="inherit"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guideline7"
                app:layout_constraintTop_toTopOf="@+id/guideline9" />

            <ImageView
                android:id="@+id/imagestato"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                app:layout_constraintStart_toEndOf="@+id/nomestazione"
                app:layout_constraintTop_toTopOf="@+id/guideline9"
                app:srcCompat="@drawable/realtime_black" />

            <TextView
                android:id="@+id/statoTreno"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:hint="stato"
                android:textAlignment="inherit"
                android:textColor="@android:color/black"
                android:textSize="8sp"
                app:layout_constraintStart_toEndOf="@+id/imagestato"
                app:layout_constraintTop_toTopOf="@+id/guideline9" />

            <TextView
                android:id="@+id/orapartenza"
                android:layout_width="100dp"
                android:layout_height="10dp"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical"
                android:hint="ORA"
                android:textAlignment="inherit"
                android:textColor="@color/colorPrimary"
                android:textSize="8sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/divider"
                app:layout_constraintTop_toBottomOf="@+id/stazionepartenza" />

            <TextView
                android:id="@+id/lineatreno"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:gravity="right|center_vertical"
                android:hint="Per Destinazione"
                android:textAlignment="inherit"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline8"
                app:layout_constraintTop_toBottomOf="@+id/numerotreno" />

            <TextView
                android:id="@+id/stazionepartenza"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="55dp"
                android:gravity="left|center_vertical"
                android:hint="Stazione"
                android:textAlignment="inherit"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/divider"
                app:layout_constraintTop_toBottomOf="@+id/nomestazione" />

            <TextView
                android:id="@+id/stazionearrivo"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="48dp"
                android:gravity="left|center_vertical"
                android:hint="Stazione"
                android:textAlignment="inherit"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/divider"
                app:layout_constraintTop_toBottomOf="@+id/orapartenza" />

            <TextView
                android:id="@+id/oraarrivo"
                android:layout_width="100dp"
                android:layout_height="10dp"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical"
                android:hint="ORA"
                android:textAlignment="inherit"
                android:textColor="@color/colorPrimary"
                android:textSize="8sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/divider"
                app:layout_constraintTop_toBottomOf="@+id/stazionearrivo" />

            <View
                android:id="@+id/divider"
                android:layout_width="2dp"
                android:layout_height="100dp"
                android:layout_marginStart="15dp"
                android:background="@color/colorPrimaryDark"
                app:layout_constraintBottom_toTopOf="@+id/guideline10"
                app:layout_constraintStart_toStartOf="@+id/guideline7"
                app:layout_constraintTop_toBottomOf="@+id/nomestazione" />

            <TextView
                android:id="@+id/classetreno"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginTop="40dp"
                android:gravity="right|center_vertical"
                android:text="2CL"
                android:textAlignment="inherit"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline8"
                app:layout_constraintTop_toBottomOf="@+id/numerotreno" />

            <TextView
                android:id="@+id/binariotreno"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:gravity="right|center_vertical"
                android:text="Binario numero"
                android:textAlignment="inherit"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/guideline8"
                app:layout_constraintTop_toBottomOf="@+id/classetreno" />

            <TextView
                android:id="@+id/numerotreno"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:gravity="right|center_vertical"
                android:hint="Numero Treno"
                android:textAlignment="inherit"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline8"
                app:layout_constraintTop_toTopOf="@+id/guideline9" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.96" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.04" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.96" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.04" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline8"
                app:layout_constraintTop_toBottomOf="@+id/binariotreno"
                app:srcCompat="@android:drawable/btn_star_big_off" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cercabt"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/colorPrimary"
                android:textSize="6sp"
                app:icon="@android:drawable/ic_dialog_alert"
                app:iconSize="10dp"
                app:iconTint="@color/colorPrimary"
                app:layout_constraintBottom_toTopOf="@+id/guideline10"
                app:layout_constraintEnd_toStartOf="@+id/guideline8"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="2dp"
                tools:text="segnala" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>