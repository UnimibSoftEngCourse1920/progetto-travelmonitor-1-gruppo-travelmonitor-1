<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sviluppotrilo.trilo">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Preferiti">
        </activity>

        <activity android:name=".Impostazioni">
        </activity>

        <activity android:name=".Profilo"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity android:name=".CercaViaggio"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity android:name=".Mappa">
        </activity>

        <activity android:name=".Social">
        </activity>

        <activity android:name=".RisultatiCercaViaggio">
        </activity>

        <activity android:name=".CercaStazione">
        </activity>

        <activity android:name=".AboutUs">
        </activity>

        <service
            android:name=".Schedulatore"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>


</manifest>